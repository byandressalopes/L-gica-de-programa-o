algoritmo "fases_idade"

var
idade: inteiro

inicio
escreval("Olá, amigxs!")
escreval("Preciso conhecer mais sobre você:)")
escreval("Qual a sua idade?")
leia(idade)
se (idade <= 12) entao
   escreval("Hummmm... Você é apenas uma criança.")
senao
se (idade <= 18) entao
   escreval("Aaaah, você já é um adolescente.")
senao
se (idade <= 60) entao
   escreval("Que pena! Você é um adulto.")
senao
   escreval("Uaaaau! Você é um idoso.")
fimse
fimse
fimse
fimalgoritmo
